@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-2">
            <img src="/img/@Model.Image" class="img-fluid" alt="user image">
        </div>
        
    </div>
    <div class="col-md-10">
        <div class="bg-white p-4">
            <h5>@Model.Name</h5>
            <hr>
            <div id="post">
                <h5 class="my-4">
                    Shared Posts
                </h5>
                <ul class="list-group">
                    @foreach(var post in @Model.Posts)
                    {
                        <li class="list-group-item">
                            <i class="bi bi-caret-right-fill">
                                <a href="/posts/details/@post.Url">@post.Title</a>
                            </i>
                            
                        </li>
                    }
                </ul>
            </div>
            <div id="comments">
                <h5 class="my-4">
                    Comments
                </h5>
                <ul class="list-group">
                    @foreach(var comment in @Model.Comments)
                    {
                        <li class="list-group-item">
                            <i class="bi bi-chat-right-text-fill"></i>
                            &nbsp;@comment.Text <i ><u><a href="/posts/details/@comment.Post.Url">[@comment.Post.Title]</a></u></i>
                        </li>
                    }
                </ul>
            </div>
        </div>
        
    </div>
</div>